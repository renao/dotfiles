[init]
  defaultBranch = main

[alias]
  co = checkout
  unstage = reset HEAD
  lg = log --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %C(bold)%s %Creset%C(white)%cn%Creset %C(green)%cr' --abbrev-commit --date=relative
  undo = reset --soft HEAD^
  count = shortlog -sn

[color]
  branch = auto
  diff = auto
  status = auto
  grep = auto

